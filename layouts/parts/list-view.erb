<ul class="list-view">
  <% @items.each do |item| %>
  <li class="list-view-entry">
    <div
      class="list-view-card <% if item[:thumbnail] %>has-thumbnail<% end %>"
      data-accent-fg="<%= item[:accentFg] || "#1897ff" %>"
      data-accent-bg="<%= item[:accentBg] || "transparent" %>">
      <div class="list-view-card-text">
        <h2 class="article-title">
          <a href="<%= permalink(item.path) %>"><%= item[:title] %></a>
        </h2>
        <% if item[:date] or item[:tags] %>
        <div class="article-meta">
          <% if item[:date] %> 
          <span class="article-time">
            <time datetime="<%= item[:date] %>"><%= format_time(item[:date], "%d %b, %Y") %></time>
          </span>
          <% end %>
          <% if item[:tags] %> 
          <ul class="article-tags">
            <% item[:tags].each do |tag| %>
              <li class="article-tag"><a href="<%= permalink("/tags/#{tag.downcase}/") %>"><%= tag %></a></li>
            <% end %>
          </ul>
          <% end %>
        </div>
        <% end %>
      </div>
      <% if item[:thumbnail] %>
      <div class="list-view-card-thumbnail"
          aria-hidden="true"
          style="background-image: url(<%= permalink("#{@item.path}#{@item[:thumbnail]}") %>)"></div>
      <% end %>
    </div>
  </li>
  <% end %>
</ul>
